---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="\public\fonts\Black Studio - BentogaItalic-Thin.otf"
    />
    <link
      rel="stylesheet"
      href="/public/fonts/Montserrat-VariableFont_wght.ttf"
    />
    <link rel="stylesheet" href="/public/fonts/MyriadPro-Regular.ttf" />
    <!-- owl -->
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Bentoga Italic";
    src: url("/fonts/BentogaItalic.otf") format("truetype");
    font-style: normal;
    font-display: swap;
    font-weight: bold;
  }
  @font-face {
    font-family: "Montserrat-VariableFont_wght";
    src: url("/fonts/Montserrat-VariableFont_wght.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --yellow: #f1edba;
    --brown: #6a5548;
    --beige: #dbc7a3;
    --green: #bbc1a9;
    --beige-clear: #e8e7d9;
    --gray: #707070;
    --black: "Black Studio - Bentoga Italic", serif;
    --monserrat: "Montserrat", sans-serif;
    --myriad: "Myriad Pro", sans-serif;
  }

  html {
    /* scroll-behavior: smooth; */
  }

  body {
    font-family: "Bentoga Italic", "Montserrat", sans-serif;
  }

  .bentoga {
    font-family: "Bentoga Italic", serif;
    font-style: italic;
  }

  .monserrat {
    font-family: "Montserrat-VariableFont_wght", sans-serif;
  }

  .brown {
    color: var(--brown);
  }

  .gray {
    color: var(--gray);
  }

  .green {
    color: var(--green);
  }
</style>
